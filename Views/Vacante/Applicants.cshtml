@model IEnumerable<dynamic>

<h1 class="text-center my-4">Aplicantes para @ViewBag.VacanteTitulo</h1>

<div class="table-responsive">
    <table class="table table-bordered table-hover table-striped">
        <thead class="table-light text-center">
            <tr>
                <th>Nombre Completo</th>
                <th>Experiencia</th>
                <th>Profesi√≥n</th>
                <th>Descargar CV</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Any())
            {
                @foreach (var aplicante in Model)
                {
                    <tr>
                        <td>@aplicante.NombreCompleto</td>
                        <td>@aplicante.Experiencia</td>
                        <td>@aplicante.Profesion</td>
                        <td class="text-center">
                            @if (aplicante.PerfilPostulante != null && aplicante.PerfilPostulante.CV != null)
                            {
                                <p><a href="@Url.Action("DownloadCV", "Profile", new { id = aplicante.PerfilPostulante.Id })">Descargar CV</a></p>
                            }
                            else
                            {
                                <span class="text-muted">No disponible</span>
                            }
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="4" class="text-center text-muted py-3">
                        No hay aplicantes para esta vacante.
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
