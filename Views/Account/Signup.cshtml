@{
    ViewData["Title"] = "Signup";
}
@model Usuario
<h2>Signup</h2>

<form asp-controller="Account" asp-action="Signup" method="post">
    <div class="form-group">
        <label for="Username">Username</label>
        <input asp-for="NombreUsuario" type="text" class="form-control" id="Username" name="Username" required />
    </div>
    <div class="form-group">
        <label for="Email">Email</label>
        <input asp-for="CorreoUsuario" type="email" class="form-control" id="Email" name="Email" required />
    </div>
    <div class="form-group">
        <label for="Password">Password</label>
        <input asp-for="ContrasenaUsuario" type="password" class="form-control" id="Password" name="Password" required />
    </div>
    <div class="form-group">
        <label for="Rol">Rol</label>
        <select asp-for="RolID">
            <option value="Postulante">Postulante</option>
            <option value="Reclutador">Empresa</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Signup</button>
</form>