@model jbp_wapp.Models.PerfilPostulante

<div class="container my-5">
    <div class="card border-dark shadow">
        <div class="card-header bg-secondary text-white">
            <h2 class="text-center">Editar Perfil de Postulante</h2>
        </div>
        <div class="card-body">
            <form asp-action="EditPostulante" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id" />
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Usuario.Nombre"></label>
                        <input asp-for="Usuario.Nombre" class="form-control" />
                        <span asp-validation-for="Usuario.Nombre" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="Usuario.Apellido"></label>
                        <input asp-for="Usuario.Apellido" class="form-control" />
                        <span asp-validation-for="Usuario.Apellido" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Usuario.NombreUsuario"></label>
                    <input asp-for="Usuario.NombreUsuario" class="form-control" />
                    <span asp-validation-for="Usuario.NombreUsuario" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Usuario.Contrasena"></label>
                    <input asp-for="Usuario.Contrasena" class="form-control" />
                    <span asp-validation-for="Usuario.Contrasena" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Usuario.Correo"></label>
                    <input asp-for="Usuario.Correo" class="form-control" />
                    <span asp-validation-for="Usuario.Correo" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="IdProfesion">Profesiones</label>
                    <select asp-for="IdProfesion" asp-items="ViewBag.Profesiones" class="form-control">
                    </select>
                    <span asp-validation-for="IdProfesion" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="IdExperiencia">Experiencias</label>
                    <select asp-for="IdExperiencia" asp-items="ViewBag.Experiencias" class="form-control">
                    </select>
                    <span asp-validation-for="IdExperiencia" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>Actualizar CV</label>
                    <input type="file" name="cvfile" class="form-control"/>
                </div>
                <div class="btn-group">
                    <button type="submit" class="btn btn-primary btn-sm">Guardar</button>
                    <a href="javascript:history.back()" class="btn btn-secondary btn-sm">Atras</a>
                </div>
            </form>
        </div>
    </div>
</div>
